{
  "name": "backend",
  "version": "1.0.0",
  "description": "ZayCommerce backend with client and admin SPA",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm run build-client && npm run build-admin",
    "build-client": "cd ../client && npm install && npm run build",
    "build-admin": "cd ../admin && npm install && npm run build",
    "bot": "node bot/index.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.0",
    "connect-history-api-fallback": "^2.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "multer": "^1.4.5-lts.2",
    "node-fetch": "^3.3.2",
    "node-telegram-bot-api": "^0.66.0",
    "razorpay": "^2.9.6",
    "slugify": "^1.6.6",
    "stripe": "^18.0.0",
    "validator": "^13.15.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9"
  }
}
